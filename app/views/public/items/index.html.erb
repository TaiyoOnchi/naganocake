<h1>商品一覧</h1>
<div class="container">
	<div class="row">
	  <div class="col-md-2">
	    <% @genres.each do |genre| %>
        <%= link_to genre.name, items_path(genre_id: genre.id) %><br></br>
      <% end %>
	  </div>
		<div class="col-md-10">
		  <% @items.each do |item| %>
         <% if item.is_deleted == false%>
          <div class="card shadow-sm">
            <div class="card-body">
              <%= link_to item_path(item.id) do %>
                <%= image_tag item.get_item_image(100,100), class:"mt-3 "; %>
              <% end %>
              <p class="card-title">商品名：<%= link_to item.name, item_path(item.id) %></p>
            </div>
          </div>
        <%end%>
      <% end %>
		</div>
	</div>
</div>
   