<h1>配送先編集</h1>
<% if @address.errors.any? %> 
	<h3><%= @address.errors.count %> errors occurred</h3>
	<ul>
    <% @address.errors.full_messages.each do |message| %> 
				<li><%= message %></li>　
		<% end %>
	</ul>
<% end %>

<%= form_with model: @address ,url: update_addresses_path do |f| %>

  <div class="field">
    <p>郵便番号</p>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <p>住所</p>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
  
  <div class="field">
    <p>宛名</p>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  
	<%= f.submit "更新" %>
<% end %>
